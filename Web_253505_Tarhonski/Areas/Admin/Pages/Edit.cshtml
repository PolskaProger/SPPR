@page
@using Web_253505_Tarhonski.Areas.Admin.Pages
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Airsoft</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Важно добавить enctype="multipart/form-data" для поддержки загрузки файлов -->
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Airsoft.ID" />
            <div class="form-group">
                <label asp-for="Airsoft.Name" class="control-label"></label>
                <input asp-for="Airsoft.Name" class="form-control" />
                <span asp-validation-for="Airsoft.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Airsoft.Description" class="control-label"></label>
                <input asp-for="Airsoft.Description" class="form-control" />
                <span asp-validation-for="Airsoft.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Airsoft.Price" class="control-label"></label>
                <input asp-for="Airsoft.Price" class="form-control" />
                <span asp-validation-for="Airsoft.Price" class="text-danger"></span>
            </div>
            <!-- Выпадающий список для выбора категории -->
            <div class="form-group">
                <label asp-for="Airsoft.CategoryId">Category</label>
                <select asp-for="SelectedCategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "ID", "Name"))"></select>
            </div>
            <!-- Поле для загрузки изображения -->
            <div class="form-group">
                <!-- Скрытое поле для сохранения текущего пути к изображению -->
                <input asp-for="Airsoft.ImagePath" type="hidden" />

                <!-- Отображение текущего изображения -->
                <img src="@Model.Airsoft.ImagePath" alt="Current Image" width="150" height="150"></img>
                <label>Upload New Image</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
